  "info": {
    "title": "Instalog API",
    "description": "API for collecting logs, feedback, and crash reports from mobile applications",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://api.instalog.dev/api",
      "description": "Api server"
    }
  ],
