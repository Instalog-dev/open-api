      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    },
    "schemas": {
      "DeviceInfo": {
        "type": "object",
        "additionalProperties": true,
        "description": "A map of device information properties",
        "example": {
          "os": "android",
          "device_brand": "google",
          "device_model": "sdk_gphone64_arm64",
          "android_version": "15",
          "battery_level": 100.0,
          "battery_state": "not_charging",
          "build_board": "goldfish_arm64",
